<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-access="field">

    <class name="game.domain.model.gamerecord.GameRecord" table="t_gamerecord" lazy="true">

        <id name="id" type="java.lang.String" column="id" unsaved-value="null" length="32">
            <generator class="uuid"/>
        </id>

        <version name="version" column="version" type="java.lang.Integer"/>

        <property name="createDate" column="create_date" type="java.util.Date"/>

        <property name="userNames" column="user_names" type="java.lang.String"/>

        <property name="gameInfo" column="game_info" type="java.lang.String" length="10000"/>

        <property name="baseScore" column="base_score" type="java.lang.Integer"/>

        <property name="gameType" column="game_type">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">game.core.enums.GameType</param>
                <param name="type">4</param>
            </type>
        </property>

        <property name="roomOwner" column="room_owner" type="java.lang.String"/>

        <property name="totalRound" column="total_round" type="java.lang.Integer"/>

        <property name="roomNo" column="room_no" type="java.lang.Integer"/>

        <property name="rule" column="rule" type="java.lang.Integer"/>

        <property name="doubleBull" column="double_bull" type="java.lang.Boolean"/>

        <property name="spottedBull" column="spotted_bull" type="java.lang.Boolean"/>

        <property name="bombBull" column="bomb_bull" type="java.lang.Boolean"/>

        <property name="smallBull" column="small_bull" type="java.lang.Boolean"/>

        <property name="playerPush" column="player_push" type="java.lang.Boolean"/>

        <property name="startedInto" column="started_into" type="java.lang.Boolean"/>


    </class>

</hibernate-mapping>