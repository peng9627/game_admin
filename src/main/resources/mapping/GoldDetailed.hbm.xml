<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-access="field">
    <class name="game.domain.model.golddetailed.GoldDetailed" table="t_gold_detailed" lazy="true">
        <id name="id" type="java.lang.String" column="id" unsaved-value="null" length="32">
            <generator class="uuid"/>
        </id>

        <version column="version" name="version" type="java.lang.Integer"/>

        <property name="createDate" column="create_date" type="java.util.Date"/>

        <many-to-one name="user" column="user_id" class="game.domain.model.user.User"/>

        <property name="gold" column="gold" type="java.math.BigDecimal" scale="2"/>

        <property name="flowType" column="flow_type">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">game.core.enums.FlowType</param>
                <param name="type">4</param>
            </type>
        </property>

        <property name="description" column="description" type="java.lang.String"/>

        <property name="oldGold" column="old_gold" type="java.math.BigDecimal"/>

        <property name="newGold" column="new_gold" type="java.math.BigDecimal"/>

    </class>
</hibernate-mapping>