<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-access="field">
    <class name="niuniu.domain.model.account.Account" table="t_account" lazy="true">
        <id name="id" type="java.lang.String" column="id" unsaved-value="null" length="32">
            <generator class="uuid"/>
        </id>

        <version column="version" name="version" type="java.lang.Integer"/>

        <property name="createDate" column="create_date" type="java.util.Date"/>

        <property name="userName" column="user_name" type="java.lang.String" unique="true"/>

        <property name="password" column="password" type="java.lang.String"/>

        <property name="salt" column="salt" type="java.lang.String"/>

        <property name="lastLoginIP" column="last_login_ip" type="java.lang.String"/>

        <property name="lastLoginDate" column="last_login_date" type="java.util.Date"/>

        <property name="lastLoginPlatform" column="last_login_platform" type="java.lang.String"/>

        <property name="token" column="token" type="java.lang.String" unique="true"/>

        <bag name="roles" lazy="extra" table="t_account_role" cascade="save-update">
            <key column="account_id"/>
            <many-to-many class="niuniu.domain.model.role.Role" column="role_id"/>
        </bag>

        <property name="head" column="head" type="java.lang.String"/>

        <property name="status" column="status">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">niuniu.core.enums.EnableStatus</param>
                <param name="type">4</param>
            </type>
        </property>

        <joined-subclass name="niuniu.domain.model.user.User" table="t_user">
            <key column="account_id"/>
            <many-to-one name="parent" column="parent_id" class="niuniu.domain.model.user.User"/>
            <property name="name" column="name" type="java.lang.String"/>
            <property name="money" column="money" type="java.math.BigDecimal" scale="2"/>
            <property name="vip" column="is_vip" type="java.lang.Boolean"/>
            <property name="sex" column="sex">
                <type name="org.hibernate.type.EnumType">
                    <param name="enumClass">niuniu.core.enums.Sex</param>
                    <param name="type">4</param>
                </type>
            </property>
            <property name="deviceNo" column="device_no" type="java.lang.String"/>
            <property name="phoneNo" column="phone_no" type="java.lang.String"/>
            <property name="ranking" column="ranking" type="java.lang.Integer"/>
            <property name="spreadCanGet" column="spread_can_get" type="java.math.BigDecimal"/>
            <property name="spreadGetted" column="spread_getted" type="java.math.BigDecimal"/>
            <property name="inviteCode" column="invite_code" type="java.lang.String" unique="true"/>
            <property name="weChatNo" column="weChat_no" type="java.lang.String"/>
            <property name="gold" column="gold" type="java.math.BigDecimal"/>
            <property name="days" column="days" type="java.lang.Integer"/>
            <property name="reward" column="reward" type="java.lang.Integer"/>
            <property name="benefit" column="benefit" type="java.lang.Integer"/>
        </joined-subclass>
    </class>
</hibernate-mapping>